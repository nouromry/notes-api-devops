{
  "id": null,
  "uid": "notes-api-dashboard",
  "title": "Notes API Observability",
  "tags": ["notes", "api", "monitoring"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "type": "stat",
      "title": "Total HTTP Requests",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(http_requests_total)",
          "legendFormat": "requests",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 }
    },
    {
      "type": "graph",
      "title": "HTTP Request Rate (per second)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[1m]))",
          "legendFormat": "req/s",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 6, "y": 0, "w": 12, "h": 4 }
    },
    {
      "type": "graph",
      "title": "Requests by Status Code",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[1m])) by (status)",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 6 }
    },
    {
      "type": "stat",
      "title": "Current Number of Notes",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "notes_count",
          "legendFormat": "notes",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 12, "y": 4, "w": 6, "h": 6 }
    },
    {
      "type": "graph",
      "title": "CPU Usage (Pod)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{pod=~\"notes-api.*\"}[2m]))",
          "legendFormat": "CPU",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 10, "w": 12, "h": 6 }
    },
    {
      "type": "graph",
      "title": "Memory Usage (Pod)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(container_memory_usage_bytes{pod=~\"notes-api.*\"})",
          "legendFormat": "memory",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 12, "y": 10, "w": 12, "h": 6 }
    }
  ]
}
